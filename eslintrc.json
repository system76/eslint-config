{
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "node": true
  },

  "plugins": [
    "ava"
  ],

  "extends": [
    "plugin:ava/recommended",
    "@nuxtjs"
  ],

  "overrides": [{
    "files": ["*.vue"],
    "rules": {
      "indent": "off"
    }
  }],

  "rules": {
    "vue/script-indent": ["error", 2, {
      "baseIndent": 1
    }]
  }
}
