{
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "node": true
  },

  "plugins": [
    "ava",
    "eslint-plugin-import-helpers",
    "vue"
  ],

  "extends": [
    "plugin:ava/recommended",
    "plugin:vue/recommended",
    "standard"
  ],

  "rules": {
    "import-helpers/order-imports": ["error", {
      "alphabetize": {
        "ignoreCase": true,
        "order": "asc"
      },
      "groups": [
        "module",
        "/^@system76/",
        ["parent", "sibling", "index"]
      ],
      "newlinesBetween": "always"
    }],

    "vue/order-in-components": ["error", {
      "order": [
        "el",
        "name",
        "parent",
        "functional",
        ["delimiters", "comments"],
        "layout",
        "meta",
        ["components", "directives", "filters"],
        "extends",
        "mixins",
        "inheritAttrs",
        "model",
        ["props", "propsData"],
        ["data", "asyncData"],
        "computed",
        "watch",
        "LIFECYCLE_HOOKS",
        "load",
        "methods",
        ["template", "render"],
        "renderError"
      ]
    }]
  }
}
